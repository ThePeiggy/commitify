<h1> New Commitment </h1>
<div class="center" margin-top="100px">
  <%= form_for @commitment do |f| %>

    <p>
      <%= f.label :title %><br>
      <%= f.text_field :title, placeholder: "Example Title" %>
    </p>

    <p>
      <%= f.label :cost %><br>
      <%= f.text_field :cost, placeholder: '10.00' %><br>
    </p>

    <p>
      <%= f.label :description %><br>
      <%= f.text_area :description, :cols => "70", :rows => "10", :maxlength=>"750", placeholder: 'Write an intro for more donations' %><br>
      <i>  Max 750 characters</i>
    </p>

    <p>
      <%= f.submit "Submit", class: "btn btn-lg btn-success" %>
    </p>
  <% end %>

  <%= link_to 'Cancel', user_path(current_user) %>
</div>
